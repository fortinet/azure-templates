                  "Standard_D4as_v4",
                  "Standard_D8as_v4",
                  "Standard_D16as_v4",
                  "Standard_D32as_v4",
                  "Standard_D2_v5",
                  "Standard_D4_v5",
                  "Standard_D8_v5",
                  "Standard_D16_v5",
                  "Standard_D32_v5",
                  "Standard_D2s_v5",
                  "Standard_D4s_v5",
                  "Standard_D8s_v5",
                  "Standard_D16s_v5",
