            },
            {
              "label": "7.0.6",
              "value": "7.0.6"
            },
            {
              "label": "7.2.0",
              "value": "7.2.0"
            },
            {
              "label": "7.2.1",
              "value": "7.2.1"
            },
            {
              "label": "latest",
              "value": "latest"
            }
          ]
        },
        "visible": true
      }
    ],
